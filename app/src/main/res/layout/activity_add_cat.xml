<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCatActivity">

    <TextView
        android:id="@+id/tvAddCatTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ADD NEW CAT"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimary" />


    <EditText
        android:id="@+id/etCatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/tvAddCatTitle"
        android:hint="@string/cname"
        android:drawableTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/edit_pet"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textCursorDrawable="@drawable/pink_cursor"/>

    <EditText
        android:id="@+id/etCatAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/etCatName"
        android:hint="@string/cage"
        android:drawableTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="number"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/edit_pet"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textCursorDrawable="@drawable/pink_cursor"/>

    <EditText
        android:id="@+id/etCatSpecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/etCatAge"
        android:hint="@string/cspecies"
        android:drawableTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/edit_pet"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textCursorDrawable="@drawable/pink_cursor"/>


    <RadioGroup
        android:id="@+id/add_catRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCatSpecies"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="17dp"
        android:drawableTint="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:padding="4sp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtnCMale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/inputs"
            android:checked="true"
            android:padding="10sp"
            android:layout_marginRight="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:text="수컷" />

        <RadioButton
            android:id="@+id/rbtnCFemale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/inputs"
            android:padding="10sp"
            android:layout_marginRight="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:gravity="center"
            android:text="암컷" />
    </RadioGroup>


    <Button
        android:id="@+id/btnAddCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD CAT"
        android:padding="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/buttons"
        android:layout_below="@+id/add_catRadio"
        />

</RelativeLayout>